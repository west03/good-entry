<div class="container">
  <h2 class="my-2"><%= @guest.last_name %> <%= @guest.first_name %>さんの詳細</h2>
  <div class="row my-2">
    <p class="col-md-3">guestID</p>
    <p class="col-md-9"><%= @guest.id %></p>
  </div>
   <div class="row my-2">
    <p class="col-md-3">氏名</p>
    <p class="col-md-9"><%= @guest.last_name %>　<%= @guest.first_name %></p>
  </div>
   <div class="row my-2">
    <p class="col-md-3">フリガナ</p>
    <p class="col-md-9"><%= @guest.last_name_kana %>　<%= @guest.first_name_kana %></p>
  </div>
   <div class="row my-2">
    <p class="col-md-3">郵便番号</p>
    <p class="col-md-9"><%= @guest.postal_code %></p>
  </div>
  <div class="row my-2">
    <p class="col-md-3">住所</p>
    <p class="col-md-9"><%= @guest.address %></p>
  </div>
  <div class="row my-2">
    <p class="col-md-3">電話番号</p>
    <p class="col-md-9"><%= @guest.telephone_number %></p>
  </div>
  <div class="row my-2">
    <p class="col-md-3">メールアドレス</p>
    <p class="col-md-9"><%= @guest.email %></p>
  </div>
  <div class="row my-2">
    <p class="col-md-3">ステータス</p>
    <div class="col-md-9">
      <% if @guest.is_active == true %>
        <p class="text-success">有効</p>
      <% else %>
        <p class="text-secondary">退会</p>
      <% end %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-md-3"></div>
    <div class="col-md-3 my-3"><%= link_to "編集する", edit_admins_guest_path(@guest.id), class: "btn-sm btn-success"  %></div>
    <div class="col-md-3 my-3"><%= link_to "参加イベントを見る", admins_event_guest_path(@guest.id), class: "btn-sm btn-primary" %></div>
    <div class="col-3"></div>
  </div>
</div>
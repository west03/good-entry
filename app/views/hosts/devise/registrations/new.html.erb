<div class="container">
  <h2>host新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "hosts/devise/shared/error_messages", resource: resource %>

     <div class="field row my-3">
      <div class="col-4"><%= f.label :名前 %></div>
      <div class="col-8"><%= f.text_field :name, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-4"><%= f.label :メールアドレス %></div>
      <div class="col-8"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="field row my-3">
      <div class="col-4"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class="col-8"><%= f.text_field :postal_code, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-4"><%= f.label :住所 %></div>
      <div class="col-8"><%= f.text_field :address, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-4"><%= f.label :"電話番号(ハイフンなし)" %></div>
      <div class="col-8"><%= f.text_field :telephone_number, autofocus: true, autocomplete: true %></div>
    </div>

    <div class="field row my-3">
      <div class="col-4"><%= f.label :"パスワード(6文字以上)" %></div>
      <div class="col-8"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="field row my-3">
      <div class="col-4"><%= f.label :"パスワード(確認用)" %></div>
      <div class="col-8"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="actions row my-3">
      <div class="col-4"></div>
      <div class="col-8"><%= f.submit "新規登録", class: "btn-sm btn-success btn-lg center-block" %></div>
    </div>
  <% end %>

  <div>
    <p>既に登録済みの方</p>
    <%= render "hosts/devise/shared/links" %>
  </div>
</div>
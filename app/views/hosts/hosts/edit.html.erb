<div class="container">
  <h2><%= @host.name %></h2>
  <% if @host.errors.any? %>
    <%= @host.errors.count %>件のエラーが発生しました
    <% @host.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  <% end %>
  <div>
    <%= form_with model: @host, url: hosts_host_path(test: 'sample'), local: true do |f| %>
    <div class="field row my-3">
      <div class="col-3"><%= f.label :名前 %></div>
      <div class="col-9"><%= f.text_field :name %></div>
    </div>
    <div class="field row my-3">
      <div class="col-3"><%= f.label :郵便番号 %></div>
      <div class="col-9"><%= f.text_field :postal_code %></div>
    </div>
    <div class="field row my-3">
      <div class="col-3"><%= f.label :住所 %></div>
      <div class="col-9"><%= f.text_field :address %></div>
    </div>
    <div class="field row my-3">
      <div class="col-3"><%= f.label :電話番号 %></div>
      <div class="col-9"><%= f.text_field :telephone_number %></div>
    </div>
    <div class="field row my-3">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-9"><%= f.text_field :email %></div>
    </div>
    <div class="actions row">
      <div class="col-3"></div>
      <div class="col-3"><%= f.submit "編集を確定", class: "btn-sm btn-success" %></div>
      <div class="col-3"><%= link_to "退会する", hosts_hosts_unsubscribe_path(), class: "btn-sm btn-danger" %>
    </div>
    <% end %>
  </div>
</div>
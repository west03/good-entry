<div class="container">
  <h2>イベント一覧</h2>
  <div class="ml-auto p-2 bd-highlight"><%= button_to "+",   new_hosts_event_path, method: :get  %></div>
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>ステータス</th>
        <th>場所</th>
        <th>日時</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |events| %>
      <tr>
        <td><%= events.title %></td>
        <td><%= events.holding_flag %></td>
        <th><%= events.prefecture %></th>
        <th><%= events.date_and_time %></th>
        <td><%= link_to "詳細へ", hosts_event_path(events.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @events %>
  </div>
</div>
<div class="container">
  <h2>イベント投稿一覧</h2>
  <div class="ml-auto p-2 bd-highlight"><%= button_to "+",   new_hosts_event_path, method: :get  %></div>
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
      <tr>
        <%= event.title %>
        <%= event.host.name %>
        <%= link_to "詳細へ", hosts_event_path(event.id) %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @events %>
  </div>
</div>
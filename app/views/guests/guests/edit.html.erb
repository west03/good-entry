<div class="container">
  <h2>guest編集</h2>

  <%= form_with model: @guest, url: guests_path, local: true do |f| %>
    <div class="field row my-3">
      <div class="col-md-4"><%= f.label :名前 %></div>
      <div class="col-md-4"><span>(姓)</span><%= f.text_field :last_name, autofocus: true, autocomplete: true %></div>
      <div class="col-md-4"><span>(名)</span><%= f.text_field :first_name, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-md-4"><%= f.label :フリガナ %></div>
      <div class="col-md-4"><span>(セイ)</span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: true %></div>
      <div class="col-md-4"><span>(メイ)</span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-md-4"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class="col-md-8"><%= f.text_field :postal_code, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-md-4"><%= f.label :住所 %></div>
      <div class="col-md-8"><%= f.text_field :address, autofocus: true, autocomplete: true, size: "50"  %></div>
    </div>
    <div class="field row my-3">
      <div class="col-md-4"><%= f.label :"電話番号(ハイフンなし)" %></div>
      <div class="col-md-8"><%= f.text_field :telephone_number, autofocus: true, autocomplete: true %></div>
    </div>
    <div class="field row my-3">
      <div class="col-md-4"><%= f.label :メールアドレス %></div>
      <div class="col-md-4"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="actions row my-3">
      <div class="col-md-4"></div>
      <div class="col-md-4"><%= f.submit "変更を保存", class: "btn-sm btn-success btn-lg center-block" %></div>
      <div class="col-md-4"><%= link_to "退会する", guests_unsubscribe_path, class: "btn-sm btn-danger" %></div>
    </div>
  <% end %>

</div>
<div class="container">
  <h2>guestログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row my-3">
      <div class="col-md-3"><%= f.label :メールアドレス %></div>
      <div class="col-md-9"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %></div>
    </div>

    <div class="field row my-3">
      <div class="col-md-3"><%= f.label :パスワード %></div>
      <div class="col-md-9"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions　mmy-3">
      <%= f.submit "ログイン", class: "btn-sm btn-primary" %>
    </div>
  <% end %>
  <div class="my-3">
    <%= render "guests/devise/shared/links" %>
  </div>
</div>